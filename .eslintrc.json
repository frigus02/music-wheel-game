{
    "parserOptions": {
        "ecmaVersion": 2017,
        "sourceType": "module",
        "ecmaFeatures": {
            "experimentalObjectRestSpread": true
        }
    },
    "extends": [
        "eslint:recommended",
        "crockford"
    ],
    "env": {
        "browser": true,
        "es6": true
    },
    "rules": {
        "no-plusplus": "off",
        "no-underscore-dangle": "off",
        "no-use-before-define": "off",
        "no-var": "error",
        "one-var": "off",
        "strict": "error",
        "wrap-iife": ["error", "inside"],
        "curly":"off",
        "no-continue":"off",
        "new-cap": ["error", { "capIsNewExceptionPattern": "Mixin$" }]
    },
    "globals": {
        "Redux": false
    }
}
